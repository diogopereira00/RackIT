<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_rect"

    android:padding="20dp">

    <TextView
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Quantos produtos pretende comprar?"
        android:textColor="@color/primary"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sure"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:text="Quantidade"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/quantidadeEditText"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/quantidade"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorTextBlack"
        android:fontFamily="@font/seg_ui_semibold"
        android:hint="@string/introduza_a_quantidade"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingEnd="26dp"
        android:textColor="@color/defaultText"
        android:textColorHint="@color/colorPlaceholder"
        tools:ignore="Autofill"
        tools:targetApi="m" />

    <CheckBox
        android:id="@+id/urgente"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantidadeEditText"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:buttonTint="@color/primary"
        android:checked="false"
        android:text="Urgente"
        android:autoSizeMaxTextSize="25sp"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/defaultText"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#0F6DD2"
        android:textCursorDrawable="?android:attr/textCursorDrawable"
        android:textIsSelectable="true"

        android:textSize="18sp"

        />

    <Button
        android:id="@+id/adicionarListaCompras"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/urgente"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_primary_background"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/seg_ui_semibold"
        android:scaleType="center"
        android:text="Adicionar a lista de compras"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/adicionarListaCompras"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/seg_ui_semibold"
        android:scaleType="center"
        android:text="@string/cancelar"
        android:textColor="@color/colorPlaceholder"
        android:textSize="16sp" />


</RelativeLayout>